@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

body
  position absolute
  margin 0
  padding 50px 0 0 50px

main
  opacity 0
  animation fadeIn linear 1
  animation-fill-mode forwards
  animation-duration 800ms

p
  font-family Helvetica, Arial, sans-serif
  font-weight 100
  font-size 2em
  color #333
  line-height 1.40